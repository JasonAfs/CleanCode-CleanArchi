{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "paths": {
        "@domain/*": ["domain/*"],
        "@application/*": ["application/*"],
        "@infrastructure/*": ["infrastructure/*"],
      }
    },
    "include": ["src/**/*", "tests"]
  }